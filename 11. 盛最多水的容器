class Solution {
public:
    int maxArea(vector<int>& height) {
        if (height.size() < 2) {
            return 0;
        }

        int left = 0, right = height.size() - 1, result = 0;

        do {
            int tmp = min(height[left], height[right]) * (right - left);
            if (tmp > result) {
                result = tmp;
            }

            if (height[left] < height[right]) {
                left++;
            } else {
                right--;
            }
        } while (left < right);

        return result;
    }
};
