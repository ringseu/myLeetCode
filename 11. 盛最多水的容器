class Solution {
public:
    int maxArea(vector<int>& height) {
        if (height.size() < 2) {
            return 0;
        }

        int result = 0;

        for (int left = 0; left < height.size() - 1; ++left) {
            for (int right = left + 1; right < height.size(); ++right) {
                int tmp = min(height[left], height[right]) * (right - left);
                if (tmp > result) {
                    result = tmp;
                }
            }
        }

        return result;
    }
};
