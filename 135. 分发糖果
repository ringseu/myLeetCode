class Solution {
public:
    int candy(vector<int>& ratings) {
        if (ratings.size() < 2) {
            return ratings.size();
        }

        int result = 0;

        vector<int> candies_l(ratings.size(), 1), candies_r(ratings.size(), 1);

        for (int i = 1; i < ratings.size(); ++i) {
            if (ratings[i] > ratings[i-1]) { //比左边大，糖果数+1
                candies_l[i] = candies_l[i-1] + 1;
            } else { //否则糖果数重置为1
                candies_l[i] = 1;
            }
        }

        for (int i = ratings.size() - 2; i >= 0; i--) {
            if (ratings[i] > ratings[i+1]) {
                candies_r[i] = candies_r[i+1] + 1;
            } else {
                candies_r[i] = 1;
            }
        }

        for (int i = 0; i < ratings.size(); ++i) {
            result += max(candies_l[i], candies_r[i]);
        }

        return result;
    }
};
