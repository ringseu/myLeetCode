class Solution {
public:
    void nextPermutation(vector<int>& nums) {
        if (nums.size() < 2) {
            return;
        }

        int b = 0, e = nums.size()-1;

        for (int i = nums.size()-1; i > 0; --i) {
            if (nums[i-1] < nums[i]) { //找到逆序序列终止的位置
                for (int j = nums.size()-1; j >= i; --j) {
                    if (nums[i-1] < nums[j]) {
                        swap(nums[i-1], nums[j]);
                        break;
                    }
                }

                b = i;
                break;
            }
        }

        while (b < e) {
            swap(nums[b], nums[e]);
            b++;
            e--;
        }

        return;
    }
};
