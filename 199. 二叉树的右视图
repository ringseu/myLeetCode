/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    vector<int> rightSideView(TreeNode* root) {
        queue<pair<TreeNode*, int> > q;
        vector<int> result;
        int current_level = -1;

        if (root) {
            q.push(make_pair(root, 0));
        }

        while (q.size() > 0) {
            auto node = q.front();
            q.pop();

            if (node.second > current_level) { //记录每一层最右边的值
                result.push_back(node.first->val);
                current_level++;
            }

            if (node.first->right) {
                q.push(make_pair(node.first->right, node.second+1));
            }
            if (node.first->left) {
                q.push(make_pair(node.first->left, node.second+1));
            }
        }

        return result;
    }
};
