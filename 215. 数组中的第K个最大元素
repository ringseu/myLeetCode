class Solution {
public:
    int findKthLargest(vector<int>& nums, int k) {
        if (nums.size() == 0 || nums.size() < k) {
            return 0;
        }

        priority_queue<int, vector<int>, greater<int> > q;

        for (int i = 0; i < nums.size(); ++i) {
            if (q.size() < k || nums[i] >= q.top()) {
                q.push(nums[i]);
            }

            if (q.size() > k) {
                q.pop();
            }
        }

        return q.top();
    }
};
