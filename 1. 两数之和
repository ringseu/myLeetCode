class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        vector<int> result;
        map<int, int> tmp;    //平台不支持hash_map？

        for (int i = 0; i != nums.size(); ++i) {
            int numToFind = target - nums[i];
            if (tmp.end() != tmp.find(numToFind)) {
                result.push_back(tmp[numToFind]);
                result.push_back(i);
                return result;
            }
            tmp[nums[i]] = i;
        }

        return result;
    }
};
